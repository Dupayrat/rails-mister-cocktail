  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div class="container mt-3">
  <div class="cards">
    <% @cocktail.doses.each do |dose| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url( <% %>)">
        <%= dose.description %> <%= dose.ingredient.name %>
        <%= link_to "Delete dose", dose_path(dose), method: :delete, data: { confirm: "Are you sure?"}, class: "card-remove-link" %>
      </div>
    <% end %>

    <div>
      <%= link_to "Add dose", new_cocktail_dose_path(@cocktail), class: "card-remove-link" %>
    </div>
      <p>
        <%= link_to "Delete cocktail", cocktail_path(@cocktail), method: :delete, class: "btn btn-warning", data: { confirm: "Are you sure to delete #{@cocktail.name} and all its components?"} %>
        <span>
           <%= link_to "All cocktails", cocktails_path, class: "btn btn-primary" %>
        </span>
      </p>
