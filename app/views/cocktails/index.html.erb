<div class="container mt-3">
  <div class="cards">
    <ul>
      <% @cocktails.each do |cocktail| %>
        <li> <%= link_to cocktail.name, cocktail_path(cocktail) %> </li>
        <% if cocktail.photo.attached? %>
          <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
      <% end %>
    </ul>
  <%= link_to "Add new cocktail", new_cocktail_path, class: "btn btn-primary" %>
  </div>
</div>
